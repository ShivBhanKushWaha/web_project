            </div>
        </div>
      </div>
    </div>

    <!-- footer code  -->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
                              // day function
    const day = document.getElementById('day');
    const today_date = document.getElementById('today_date');

        const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tue";
        weekday[3] = "Wed";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";

        let currentTime = new Date();
        days = weekday[currentTime.getDay()];

        let day = document.getElementById('day');

        day.innerText = days;
    };

                    // month and date function
    const getCurrentTime = () => {
        var months = [
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "June",
          "July",
          "Aug",
          "Sept",
          "Oct",
          "Nov",
          "Dec",
        ];

        var now = new Date();
        var month = months[now.getMonth() ];
        var date = now.getDate();
        var year = now.getFullYear();

        today_date.innerText = date +" "+ month + " "+ year;
    };
    getCurrentTime();
    getCurrentDay();
    </script>
</body>
</html>